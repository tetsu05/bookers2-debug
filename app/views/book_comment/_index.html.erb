<table class="table">
  <% book_comments.each do |book_comment| %>
    <tr>
      <td>
        <%= link_to (book_comment.user) do %>
        <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
        <%= book_comment.user.name %>
        <% end %>
      </td>
    
      <td>
        <%= book_comment.comment %>
      <td>

      <td>
        <% if book_comment.user_id == current_user.id %>
          <%= link_to "delete", book_book_comment_path(book, book_comment), method: :delete, remote: true, class:'btn btn-sm btn-danger' %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

